<!DOCTYPE html>
<html>
  <head>
    <title>Rainforest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>Rainforest</h1>

    <% flash.each do |type, msg| %>
      <p><%= msg %></p>
    <% end %>

    <nav>
      <p><%= link_to "Home", products_path %>
        <% if current_user %>
          | <%= link_to "Log Out", sessions_path, method: :delete, data: { confirm: "Are you sure you want to log out?"} %>
        <% else %>
          | <%= link_to "Log In", new_sessions_path %>
          | <%= link_to "Register", new_users_path %>
        <% end %>
        | <%= link_to("Add New Product", new_product_path) %></p>
    </nav>

    <%= yield %>
  </body>
</html>
