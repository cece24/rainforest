<%= form_for ([@product, @review]) do |f| %>

  <% if @review.errors.any? %>
    <p><%= pluralize(@review.errors.count, "error") %> prevented your review from saving: </p>

    <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :comment %>:
    <%= f.text_area :comment %>
  </div>

  <%= f.submit "Submit" %>
<% end %>
